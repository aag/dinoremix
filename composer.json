{
    "require": {
        "league/route": "^3.0",
        "zendframework/zend-diactoros": "^1.4"
    },
    "require-dev": {
        "doctrine/instantiator": "1.0.*",
        "mockery/mockery": "^0.9.9",
        "phpunit/phpunit": "^6.3",
        "squizlabs/php_codesniffer": "^3.0"
    },
    "autoload": {
        "psr-4": {"App\\": "app/"}
    },
    "scripts": {
        "check-style": "./vendor/bin/phpcs --extensions=php --standard=PSR1,PSR2 --ignore=vendor,assets,node_modules .",
        "fix-style": "./vendor/bin/phpcbf --extensions=php --standard=PSR1,PSR2 --ignore=vendor,assets,node_modules .",
        "test": "./vendor/bin/phpunit --colors=always test"
    }
}
